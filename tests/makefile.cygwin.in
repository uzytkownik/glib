## Makefile for building the GLib test programs with gcc on mingw or cygwin.
## Use: make -f makefile.cygwin check

OPTIMIZE = -g -O

GLIB_VER = @GLIB_MAJOR_VERSION@.@GLIB_MINOR_VERSION@

TOP = ../..

include $(TOP)/build/win32/make.mingw

################################################################

# Nothing much configurable below

INCLUDES = -I .. 
DEFINES = -DHAVE_CONFIG_H

TESTS = \
	array-test.exe	\
	date-test.exe	\
	dirname-test.exe\
	hash-test.exe	\
	list-test.exe	\
	node-test.exe	\
	queue-test.exe	\
	rand-test.exe	\
	relation-test.exe\
	slist-test.exe	\
	strfunc-test.exe\
	string-test.exe	\
	thread-test.exe	\
	threadpool-test.exe\
	tree-test.exe	\
	type-test.exe

all:	$(TESTS)

.SUFFIXES: .c .exe

.c.exe:
	$(CC) $(CFLAGS) -c $<
	$(CC) $(CFLAGS) -o $@ $< -L.. -lglib-$(GLIB_VER) -lgthread-$(GLIB_VER)

check:	all
	@for P in $(TESTS) ; do echo $$P; ./$$P; done

clean::
	-rm *.exe *.o
